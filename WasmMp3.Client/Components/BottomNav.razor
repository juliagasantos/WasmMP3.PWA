<nav class="bottom-nav">
    <button class="bottom-nav-btn @(ActiveTab == TabKey.Notes ? "active" : "")"
            @onclick="() => Select(TabKey.Notes)">
        <span class="icon">📝</span>
        <span class="text">Notas</span>
    </button>

    <button class="bottom-nav-btn @(ActiveTab == TabKey.Offline ? "active" : "")"
            @onclick="() => Select(TabKey.Offline)">
        <span class="icon">📡</span>
        <span class="text">Offline</span>
    </button>

    <button class="bottom-nav-btn @(ActiveTab == TabKey.Settings ? "active" : "")"
            @onclick="() => Select(TabKey.Settings)">
        <span class="icon">⚙️</span>
        <span class="text">Config</span>
    </button>
</nav>

@code {
    public enum TabKey { Notes, Offline, Settings }

    [Parameter] public TabKey ActiveTab { get; set; }
    [Parameter] public EventCallback<TabKey> ActiveTabChanged { get; set; }

    private Task Select(TabKey tab)
        => ActiveTabChanged.InvokeAsync(tab);
}